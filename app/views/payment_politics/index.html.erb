<%= render :partial => "payment_politics/menu" %>
<h1>Zarządzanie politykami</h1>

<table id="TabFullSize">
  <tr>
    <td class="header">Obowiązuje od</td>
    <td class="header">Obowiązuje do</td>
    <td class="header">Podstawowa opłata</td>
    <td class="header">Górna granica</td>
    <td class="header">Procent</td>
    <td class="header" colspan="3">Opcje</td>
  </tr>
  <% for payment_politic in @payment_politics %>
    <tr>
      <td><%=h payment_politic.from.strftime("%d-%m-%Y %H:%m") if payment_politic.from %></td>
      <td><%=h payment_politic.to.strftime("%d-%m-%Y %H:%m") if payment_politic.to %></td>
      <td><%=h '%.2f' % payment_politic.base_payment %> zł</td>
      <td><%=h '%.2f' % payment_politic.upper_boundary if payment_politic.upper_boundary %> <%="zł" if payment_politic.upper_boundary%></td>
      <td><%=h payment_politic.percentage %> %</td>
      <td><%= link_to "Pokaż", {:action => :show, :id => payment_politic.id} %></td>
      <td><%= link_to "Edytuj", {:action => :edit, :id => payment_politic.id} %></td>
      <td><%= link_to "Usuń",  {:action => :destroy, :id => payment_politic.id}, :confirm => 'Czy jesteś pewien?' %></td>
    </tr>
  <% end %>
</table>
