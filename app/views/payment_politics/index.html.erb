<%= render :partial=> "products/search_box_simple" %>
<%= render :partial => "payment_politics/menu" %>
<h1>Zarządzanie politykami</h1>

<table id="TabFullSize">
  <tr>
    <td class="header">Obowiązuje od</td>
    <td class="header">Obowiązuje do</td>
    <td class="header">Podstawowa opłata</td>
    <td class="header">Górna granica</td>
    <td class="header">Procent</td>
  </tr>
  <% for payment_politic in @payment_politics %>
    <tr>
      <td><%=h payment_politic.from %></td>
      <td><%=h payment_politic.to %></td>
      <td><%=h payment_politic.base_payment %></td>
      <td><%=h payment_politic.upper_boundary %></td>
      <td><%=h payment_politic.percentage %></td>
      <td><%= link_to "Pokaż", "show/"+payment_politic.id.to_s %></td>
      <td><%= link_to "Edytuj", edit_payment_politic_path(payment_politic) %></td>
      <td><%= link_to "Usuń",  {:action => :remove_role_from_user, :id => payment_politic.id}, :confirm => 'Are you sure?' %></td>
    </tr>
  <% end %>
</table>
