<% content_for :search_box do %>
      <% form_for :search, { :url => "/products/index?[product_type]=#{@controller.product_type}&search_type=advanced"} do |f|%>
        <div class="search">
          <table>
            <tr>
                    <td class="auction_type">
                        <b>Zaawansowane wyszukiwanie Artykułów</b>
                    </td>
                    <td>
                            <!-- wewnetrzna tab -->
                            <table>
                              <%= render :partial => "advanced_search_form_common_params", :locals => {:f => f}%>
                              <tr>
                                <td colspan="3"><br /></td>
                              </tr>
                              <tr>
                                <td class="search_param_name"><%= f.label :Words_number_between, "Liczba słów:"%></td>
                                <td class="search_param_value">od: <%= f.text_field :words_number_gte, :size => 7  %></td>
                                <td class="search_param_value">do: <%= f.text_field :words_number_lte, :size => 7 %></td>
                              </tr>
                              <tr>
                                <td class="search_param_name"><%= f.label :Nr_of_links_inside, "Liczba odnośników"%></td>
                                <td class="search_param_value">od: <%= f.text_field :number_of_links_gte, :size => 7  %></td>
                                <td class="search_param_value">do: <%= f.text_field :number_of_links_lte, :size => 7 %></td>
                              </tr>
                              <% if Category.all.count > 0 %>
                              <%= render :partial => "advanced_search_form_categories", :locals => {:f => f}%>
                              <% end %>
                            </table>
                            <!-- / wewnetrzna tab -->
                    </td>
            </tr>
            <tr>
                    <%= render :partial => "advanced_search_form_submit", :locals => {:f => f}%>
            </tr>
          </table>

          </div>
    <% end %>
<% end %>