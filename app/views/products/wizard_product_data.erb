<%= render :partial=> "products/search_box_simple" %>
<%= render :partial => "product_options" %>
<% content_for :stylesheets do %> #step2 {background-color:orange} <% end -%>
<h1>Tworzenie aukcji</h1>
<%= render :partial => "progres_bar" %>


<% if params[:product_type]!=nil%>
  <% @controller.product_type.to_s %>
  <% form_for @product,:url => {:action => "wizard_preview", :product_type => @controller.product_type}  do |form| %>        
    <%= form.error_messages  :header_message => "Please Try Again!", :message => "We had some problems starting the game:" %>
<h2> Dane produktu:</h2>
                  <%= render :partial => "form_#{@controller.product_type.classify}", :locals => {:form => form}%>
<h2> Dane aukcji:</h2>
                  <% form.fields_for :auction do |auction_form| %>
                          <%= auction_form.error_messages %>
                          <%= render :partial => "form", :locals => {:auction_form => auction_form}%>

                  <% end %>


                  <%= form.submit "Dalej" %>
  <% end %>
<% end %>


