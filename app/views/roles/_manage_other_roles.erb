<table id="TabFullSize">
  <tr>
    <td colspan="3" class="header">Role <b><u>Nieprzypisane</u></b> do <b><%= @user.login %></b> </td>
  </tr>
  <tr>
    <td class="header">Nazwa roli</td>
    <td class="header">Obiekt</td>
    <td class="header">Dodaj</td>
  </tr>
  
  <%@roles.each do |r|%>
      <% unless @user.roles.include? r %>
      <tr>
            <td><%= r.name %></td>
            <td><%= render :partial=>"role", :locals=>{:r=>r} %></td>
            <td><%= link_to "Dodaj", :action => "add_role_to_user", :user_id => params[:user_id], :role_id => r.id%></td>
      </tr>
      <% end %>
  <% end %>
</table>