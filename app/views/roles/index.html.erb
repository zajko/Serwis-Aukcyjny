<%= render :partial => "roles_options" %> 
<%= stylesheet_link_tag "roles" %>
<h1> Zarządzanie rolami</h1>
<%= will_paginate @roles, :params => {:search => params[:search]}, :class=>"paginate" %>
<table id="TabRoles">
    <tr>
      <td class="RolesTabHeader">Nazwa roli</td>
      <td class="RolesTabHeader">Czy można usunać (??)</td>
      <td class="RolesTabHeader">Usuń</td>
    </tr>
	<% @roles.each do |role| %>
		<tr>
			<td><%=role.name%></td>
			<td>
                   <% if (role.destructible==true) %>
                   tak
                   <%  else %>
                   nie
                   <%  end %>
            </td>
			<td><center><%=link_to image_tag("delete.png", :border=>0), {:action=> "delete", :id => role.id}, :confirm => "Czy na pewno chcesz usunąć tą rolę ?"%></center></td>
		</tr>
	<% end  %>
</table>